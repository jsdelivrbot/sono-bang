<style>
    .uk-card-title {
        text-align: center;
        font-size: 4rem;
        border-bottom: solid;
        border-color: #714256 !important;
        padding: 2rem;
    }

    #verification-check {
        display: block;
        margin-left: auto;
        margin-right: auto;
        height: 25%;
        width: 25%;
    }

    #register-button {
        font-size: 1rem;
    }

    #thank-you {
        background: rgba(255, 255, 255, 0.25);
        padding: 1.5rem;
        margin-bottom: 100%;


    }

    .uk-form-label {
        font-size: 1rem !important;
    }

    .verification-message {
        text-align: center;
    }

    #confirmation-number {
        font-size: 1.25rem;
        color: grey;
    }

    #payment-verified {
        font-size: 2.25rem;
    }

