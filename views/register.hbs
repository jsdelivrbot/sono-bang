<div class="uk-alert uk-alert-danger">
    <ul>

        {{#errors.name}}
        <li>{{msg}}</li>{{/errors.name}} 
        {{#errors.username}}
        <li>Username must {{msg}} </li>{{/errors.username}}
        {{#errors.password}}
        <li>{{msg}}</li>{{/errors.password}}
    </ul>
</div>

<form class="uk-form uk-form-stacked" action="register" method="post" enctype="multipart/form-data">

    <div class="uk-form-row">
        <label class="uk-form-label" for="">Name</label>
        <div class="uk-form-controls">
            {{#if errors.name}}
            <input type="text" class="uk-input uk-form-danger" name="name" value="{{body.name}}"> {{else}}
            <input type="text" class="uk-input" name="name" value="{{body.name}}"> {{/if}}
        </div>
    </div>

    <!-- optional -->
    <div class="uk-form-row">
        <label class="uk-form-label" for="">Desciption</label>
        <div class="uk-form-controls">
            <input type="text" class="uk-input" name="description" value="{{body.description}}">
        </div>
    </div>

    <!-- optional -->
    <div class="uk-form-row">
        <label class="uk-form-label" for="">Home Page</label>
        <div class="uk-form-controls">
            <input type="text" class="uk-input" name="homepage" value="{{body.homepage}}">
        </div>
    </div>

    <div class="uk-form-row">
        <label class="uk-form-label" for="">Username</label>
        <div class="uk-form-controls">
            {{#if errors.username}}
            <input type="text" class="uk-input uk-form-danger" name="username" value="{{body.username}}"> {{else}}
            <input type="text" class="uk-input" name="username" value="{{body.username}}"> {{/if}}
        </div>
    </div>
    <div class="uk-form-row">
        <label class="uk-form-label" for="">Password</label>
        <div class="uk-form-controls">
            {{#if errors.password}}
            <input type="text" class="uk-input uk-form-danger" name="password"> {{else}}
            <input type="text" class="uk-input" name="password"> {{/if}}
        </div>
    </div>
    <button>Submit</button>
</form>